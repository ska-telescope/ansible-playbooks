#jinja2: trim_blocks: True, lstrip_blocks: True
{{ ansible_managed | comment }}
# http://prometheus.io/docs/operating/configuration/

global:
  resolve_timeout: 5m
  slack_api_url: {{ slack_api_url }}

# The directory from which notification templates are read.
templates: []

route:
  receiver: 'slack-notifications'
  group_wait: 10s
  group_interval: 10s
  repeat_interval: 1h
  group_by: [alertname, datacentre]

{% if alerts_inhibit_rules != [] %}
inhibit_rules:
{{ alerts_inhibit_rules | to_nice_yaml(indent=2) | indent(2,False) }}
{% endif %}

receivers:
- name: 'slack-notifications'
  slack_configs:
  - channel: 'prometheus-alerts'
    text: "<!channel> \nAlert: {{ '{{' }} .GroupLabels.alertname {{ '}}' }} \nSummary: {{ '{{' }} .CommonAnnotations.summary {{ '}}' }} \n\nDescription: {{ '{{' }} .CommonAnnotations.description {{ '}}' }} \nSee: http://alerts.engageska-portugal.pt/alerts"